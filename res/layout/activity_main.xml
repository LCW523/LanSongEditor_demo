<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent"
     android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFA500"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFA500"
    android:orientation="vertical" >

    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入视频地址"
        android:textColor="#ff0000"/>
    <EditText 
        android:id="@+id/id_main_etvideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"/>
    
    <RelativeLayout 
         android:id="@+id/id_main_demoedit"
	        android:layout_width="match_parent"
	        android:layout_height="60dip"
	        android:gravity="center_vertical"
	        android:background="#FFFFFF"
	        android:layout_marginTop="20dip"
	         >
	         <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="10dip"
		        android:text="演示视频编辑(原生编辑功能)"
		        android:textStyle="bold"
		        android:textSize="18dip"/>
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
		       		 android:layout_centerVertical="true"
			        android:layout_alignParentRight="true"
		    	    android:layout_marginRight="20dip"
			            android:background="@drawable/right_arrow"/> 
	</RelativeLayout>
	
    
      <RelativeLayout 
         android:id="@+id/id_main_demofilter"
	        android:layout_width="match_parent"
	        android:layout_height="60dip"
	        android:gravity="center_vertical"
	        android:background="#FFFFFF"
	        android:layout_marginTop="20dip"
	         >
	         <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="10dip"
		        android:text="演示视频滤镜"
		        android:textStyle="bold"
		        android:textSize="18dip"/>
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
		       		 android:layout_centerVertical="true"
			        android:layout_alignParentRight="true"
		    	    android:layout_marginRight="20dip"
			            android:background="@drawable/right_arrow"/> 
	</RelativeLayout>
	
      
      <RelativeLayout 
         android:id="@+id/id_main_twovideooverlay"
	        android:layout_width="match_parent"
	        android:layout_height="60dip"
	        android:gravity="center_vertical"
	        android:background="#FFFFFF"
	        android:layout_marginTop="20dip"
	         >
	         <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="10dip"
		        android:text="视频和视频的叠加"
		        android:textStyle="bold"
		        android:textSize="18dip"/>
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
		       		 android:layout_centerVertical="true"
			        android:layout_alignParentRight="true"
		    	    android:layout_marginRight="20dip"
			            android:background="@drawable/right_arrow"/> 
	</RelativeLayout>
	
	<RelativeLayout 
         android:id="@+id/id_main_videobitmapoverlay"
	        android:layout_width="match_parent"
	        android:layout_height="60dip"
	        android:gravity="center_vertical"
	        android:background="#FFFFFF"
	        android:layout_marginTop="20dip"
	         >
	         <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="10dip"
		        android:text="视频和图片的叠加"
		        android:textStyle="bold"
		        android:textSize="18dip"/>
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
		       		 android:layout_centerVertical="true"
			        android:layout_alignParentRight="true"
		    	    android:layout_marginRight="20dip"
			            android:background="@drawable/right_arrow"/> 
	</RelativeLayout>
	
		<RelativeLayout 
         android:id="@+id/id_main_twovideoplay"
	        android:layout_width="match_parent"
	        android:layout_height="60dip"
	        android:gravity="center_vertical"
	        android:background="#FFFFFF"
	        android:layout_marginTop="20dip"
	         >
	         <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="10dip"
		        android:text="两个视频同时播放"
		        android:textStyle="bold"
		        android:textSize="18dip"/>
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
		       		 android:layout_centerVertical="true"
			        android:layout_alignParentRight="true"
		    	    android:layout_marginRight="20dip"
			            android:background="@drawable/right_arrow"/> 
	</RelativeLayout>
	
		
    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="150dip"
	        android:gravity="center_vertical"
	        android:background="#FFFFFF"
	        android:layout_marginTop="20dip"
	         >
	         <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="10dip"
		        android:text="@string/sdk_hnit"
		        android:textColor="#0000ff"/>
	</RelativeLayout>

</LinearLayout>
</ScrollView>