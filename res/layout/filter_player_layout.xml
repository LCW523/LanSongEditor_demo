<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <com.lansosdk.videoeditor.player.VideoPlayView
            android:id="@+id/video_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
  
    <LinearLayout 
        android:id="@+id/id_player_control_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button 
            android:id="@+id/id_player_start"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="播放"
            android:layout_margin="5dip"/>
        <Button 
            android:id="@+id/id_player_pause"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="暂停"
            android:layout_margin="5dip"/>
    </LinearLayout>
    
    
     
    <LinearLayout 
        android:id="@+id/id_player_control_linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
          <TextView 
            android:id="@+id/id_player_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总时长"
            android:layout_margin="5dip"/>
	     	
       	 <TextView 
            android:id="@+id/id_player_currentpostion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"/>
        
    
       	 <!-- =========================选择滤镜==================  -->
          <Button
            android:id="@+id/id_player_btnselectfilter"
            android:layout_width="match_parent"
            android:layout_margin="20dip"
            android:layout_height="wrap_content"
            android:text="选择滤镜效果."/>
        
          <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              
              <TextView 
                  android:layout_width="0dip"
                  android:layout_weight="2"
                  android:layout_height="wrap_content"
                  android:text="滤镜调节"/>
              
                <SeekBar 
			      android:id="@+id/id_player_seekbar1"
			      android:layout_width="0dip"
			      android:layout_weight="6"
			      android:layout_height="wrap_content"
			      android:layout_margin="5dip"/>
          </LinearLayout>
           
         
      
    </LinearLayout>

</LinearLayout>
